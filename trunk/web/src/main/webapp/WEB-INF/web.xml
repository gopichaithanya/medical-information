<?xml version="1.0" encoding="GBK"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>MedicalInformation</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>encoding</filter-name>
    <filter-class>com.medicalinformation.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>charset</param-name>
      <param-value>GBK</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CheckCodeFilter</filter-name>
    <filter-class>com.medicalinformation.filter.CheckCodeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CheckCodeFilter</filter-name>
    <url-pattern>/jsp/LoginServlet</url-pattern>
  </filter-mapping>
  
  <filter>
  	<filter-name>ManageUserFilter</filter-name>
  	<filter-class>com.medicalinformation.filter.ManageUserFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>ManageUserFilter</filter-name>
  	<url-pattern>/jsp/manage/*</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.medicalinformation.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/jsp/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>com.medicalinformation.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/jsp/RegisterServlet</url-pattern>
  </servlet-mapping>
</web-app>